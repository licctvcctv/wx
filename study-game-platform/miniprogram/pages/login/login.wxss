/* pages/login/login.wxss */
.login-container {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 100rpx 60rpx;
  height: 100vh;
}

.logo-area {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 100rpx;
}

.logo {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.app-name {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.app-desc {
  font-size: 28rpx;
  color: #666;
}

.login-form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.input {
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.login-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-bottom: 30rpx;
}

.register-link {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.link {
  color: #1aad19;
}

.privacy-policy {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.policy-link {
  color: #1aad19;
  text-decoration: underline;
}
