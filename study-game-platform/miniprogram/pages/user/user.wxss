/* pages/user/user.wxss */
.user-container {
  display: flex;
  flex-direction: column;
  padding: 0;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.user-header {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding: 40rpx 30rpx;
  background-color: #ffffff;
  margin-bottom: 20rpx;
}

.avatar-container {
  margin-right: 30rpx;
}

.avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  background-color: #f0f0f0;
}

.user-info {
  flex: 1;
}

.nickname {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.username {
  font-size: 28rpx;
  color: #666;
}

.menu-list {
  background-color: #ffffff;
  margin-bottom: 30rpx;
}

.menu-item {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid #eee;
}

.menu-item-left {
  display: flex;
  flex-direction: row;
  align-items: center;
}

.menu-icon {
  width: 40rpx;
  height: 40rpx;
  margin-right: 20rpx;
}

.menu-text {
  font-size: 30rpx;
  color: #333;
}

.arrow-icon {
  width: 32rpx;
  height: 32rpx;
}

.logout-btn-container {
  padding: 30rpx;
}

.logout-btn {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  color: #fff;
  background-color: #e64340;
  border: none;
}

.logout-btn:active {
  background-color: #d33a36;
}
