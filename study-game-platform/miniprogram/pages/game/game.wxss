/* pages/game/game.wxss */
.container {
  width: 100%;
  min-height: 100vh;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-start;
  background-color: #f6f6f6;
}

/* 开始页面样式 */
.start-panel {
  width: 100%;
  padding: 40rpx;
  box-sizing: border-box;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
}

.level-info {
  text-align: center;
  margin-bottom: 80rpx;
}

.level-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
}

.level-desc {
  font-size: 32rpx;
  color: #666;
}

.start-button {
  width: 80%;
  height: 90rpx;
  background-color: #3a7bd5;
  color: white;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 30rpx;
  box-shadow: 0 6rpx 20rpx rgba(58, 123, 213, 0.3);
}

.back-button {
  width: 80%;
  height: 90rpx;
  background-color: #f1f1f1;
  color: #666;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
}

/* 游戏中样式 */
.game-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-bar {
  width: 100%;
  padding: 20rpx 0;
}

.progress-info {
  display: flex;
  justify-content: space-between;
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.timer {
  color: #3a7bd5;
  font-weight: bold;
}

.progress-track {
  width: 100%;
  height: 16rpx;
  background-color: #eaeaea;
  border-radius: 8rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background-color: #3a7bd5;
  border-radius: 8rpx;
  transition: width 0.3s ease;
}

.question-card {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 40rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-top: 20rpx;
}

.question-title {
  font-size: 36rpx;
  line-height: 1.5;
  color: #333;
  margin-bottom: 20rpx;
}

.debug-info {
  margin-bottom: 20rpx;
  padding: 10rpx;
  background-color: #f0f8ff;
  border: 1px solid #d0e6ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #666;
}

.question-type-hint {
  text-align: center;
  color: #666;
  margin-bottom: 15rpx;
  font-size: 28rpx;
  background-color: #f8f8f8;
  padding: 16rpx;
  border-radius: 8rpx;
}

.options {
  width: 100%;
}

.option {
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #f9f9f9;
  border-radius: 12rpx;
  margin-bottom: 20rpx;
  transition: all 0.2s ease;
}

.option-label {
  width: 60rpx;
  height: 60rpx;
  background-color: #eaeaea;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  color: #666;
  margin-right: 20rpx;
}

.option-content {
  font-size: 32rpx;
  color: #333;
  flex: 1;
}

.option.selected {
  background-color: #e6f0ff !important;
  border: 4rpx solid #3a7bd5 !important;
  box-shadow: 0 0 10rpx rgba(58, 123, 213, 0.5) !important;
}

.option.selected .option-label {
  background-color: #3a7bd5 !important;
  color: white !important;
  font-weight: bold !important;
}

.option.correct {
  background-color: #e6ffe6;
  border: 2rpx solid #2ecc71;
}

.option.correct .option-label {
  background-color: #2ecc71;
  color: white;
}

.option.wrong {
  background-color: #ffe6e6;
  border: 2rpx solid #e74c3c;
}

.option.wrong .option-label {
  background-color: #e74c3c;
  color: white;
}

.answer-feedback {
  margin: 30rpx 0;
  padding: 20rpx;
  border-radius: 10rpx;
  text-align: center;
}

.correct-feedback {
  background-color: #e6ffe6;
  color: #2ecc71;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.wrong-feedback {
  background-color: #ffe6e6;
  color: #e74c3c;
  padding: 20rpx;
  border-radius: 10rpx;
  font-size: 32rpx;
  font-weight: bold;
}

.score-feedback {
  margin-left: 20rpx;
  font-size: 36rpx;
}

.submit-button {
  width: 100%;
  height: 90rpx;
  background-color: #eaeaea;
  color: #999;
  border-radius: 45rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 36rpx;
  margin-top: 40rpx;
}

.submit-button.active {
  background-color: #3a7bd5;
  color: white;
  box-shadow: 0 6rpx 20rpx rgba(58, 123, 213, 0.3);
}

/* 游戏完成样式 */
.complete-panel {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.complete-header {
  text-align: center;
  margin-bottom: 40rpx;
}

.complete-title {
  font-size: 48rpx;
  font-weight: bold;
  color: #3a7bd5;
  margin-bottom: 10rpx;
}

.complete-desc {
  font-size: 32rpx;
  color: #666;
}

.score-card {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.score-item {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.score-label {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.score-value {
  font-size: 40rpx;
  color: #3a7bd5;
  font-weight: bold;
}

.leaderboard {
  width: 100%;
  background-color: white;
  border-radius: 20rpx;
  padding: 30rpx;
  box-sizing: border-box;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 30rpx;
}

.leaderboard-title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.leaderboard-list {
  width: 100%;
}

.leaderboard-item {
  display: flex;
  align-items: center;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #f1f1f1;
}

.leaderboard-item:last-child {
  border-bottom: none;
}

.rank {
  width: 60rpx;
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.username {
  flex: 1;
  font-size: 32rpx;
  color: #333;
}

.score {
  font-size: 32rpx;
  color: #3a7bd5;
  font-weight: bold;
}

.answer-result {
  margin-top: 30rpx;
  text-align: center;
}

.result-text {
  font-size: 40rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.result-text.correct {
  color: #4CAF50;
}

.result-text.wrong {
  color: #F44336;
}

.score-text {
  font-size: 36rpx;
  color: #FF9800;
  font-weight: bold;
}

.retry-tip {
  color: #F44336;
  font-size: 32rpx;
  margin: 20rpx 0;
  font-weight: bold;
}

.retry-button {
  background-color: #2196F3;
  color: white;
  width: 70%;
  margin: 20rpx auto;
  padding: 20rpx 0;
  border-radius: 50rpx;
  font-size: 32rpx;
  font-weight: bold;
  box-shadow: 0 4rpx 8rpx rgba(0, 0, 0, 0.2);
}

.action-buttons {
  width: 100%;
  display: flex;
  justify-content: space-between;
  margin-top: 20rpx;
}

.action-button {
  flex: 1;
  height: 80rpx;
  background-color: #f1f1f1;
  color: #666;
  border-radius: 40rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  margin: 0 10rpx;
}

.action-button:first-child {
  margin-left: 0;
}

.action-button:last-child {
  margin-right: 0;
}
