/* levels.wxss */
.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f8f9fa;
}

.chapter-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx 30rpx;
  background-color: #fff;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  margin-bottom: 20rpx;
  position: relative;
}

.chapter-info {
  flex: 1;
}

.chapter-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.chapter-desc {
  font-size: 28rpx;
  color: #666;
}

.nav-back {
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}

.nav-back image {
  width: 40rpx;
  height: 40rpx;
}

.level-list {
  padding: 0 30rpx;
  flex: 1;
  overflow-y: auto;
}

.level-card {
  display: flex;
  background-color: #fff;
  border-radius: 16rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 4rpx 12rpx rgba(0, 0, 0, 0.08);
  position: relative;
  overflow: hidden;
}

.level-locked {
  opacity: 0.8;
}

.level-badge {
  width: 80rpx;
  height: 80rpx;
  background-color: #4a90e2;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 30rpx;
}

.level-number {
  color: #fff;
  font-size: 36rpx;
  font-weight: bold;
}

.level-info {
  flex: 1;
}

.level-title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 15rpx;
}

.level-name {
  font-size: 34rpx;
  font-weight: bold;
  color: #333;
}

.level-difficulty {
  display: flex;
}

.star-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: 6rpx;
}

.level-desc {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 20rpx;
}

.level-meta {
  display: flex;
  font-size: 26rpx;
  color: #888;
  margin-bottom: 20rpx;
}

.level-questions {
  margin-right: 30rpx;
}

.level-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.status-text {
  font-size: 28rpx;
  padding: 6rpx 20rpx;
  border-radius: 30rpx;
}

.status-available {
  background-color: #e6f7ff;
  color: #1890ff;
}

.status-completed {
  background-color: #f6ffed;
  color: #52c41a;
}

.status-locked {
  background-color: #f5f5f5;
  color: #bfbfbf;
}

.lock-icon {
  width: 40rpx;
  height: 40rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
  opacity: 0.5;
}

.empty-tip view {
  font-size: 30rpx;
  color: #999;
}
