/* pages/subjects/subjects.wxss */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 30rpx;
}

.welcome-text {
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  color: #333;
}

.welcome-tip {
  font-size: 28rpx;
  color: #666;
}

.user-avatar {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  overflow: hidden;
  background-color: #3A7EE9;
}

.user-avatar image {
  width: 100%;
  height: 100%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 40rpx;
  color: #fff;
  font-weight: bold;
}

.search-box {
  display: flex;
  align-items: center;
  background-color: #f5f5f5;
  border-radius: 30rpx;
  padding: 15rpx 20rpx;
  margin-bottom: 30rpx;
}

.search-box icon {
  margin-right: 10rpx;
}

.search-box input {
  flex: 1;
  height: 40rpx;
  font-size: 28rpx;
}

.subject-list {
  width: 100%;
}

.subject-card {
  display: flex;
  align-items: center;
  background-color: #ffffff;
  border-radius: 16rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.05);
}

.subject-icon {
  width: 100rpx;
  height: 100rpx;
  border-radius: 16rpx;
  margin-right: 20rpx;
}

.subject-info {
  flex: 1;
}

.subject-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
  color: #333;
}

.subject-desc {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 10rpx;
}

.subject-meta {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.progress-info {
  font-size: 24rpx;
  color: #999;
}

.subject-arrow {
  margin-left: 20rpx;
}

.subject-arrow image {
  width: 32rpx;
  height: 32rpx;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
}

.empty-tip image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 20rpx;
}

.empty-tip view {
  font-size: 28rpx;
  color: #999;
}
