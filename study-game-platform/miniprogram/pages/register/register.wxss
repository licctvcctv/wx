/* pages/register/register.wxss */
.register-container {
  display: flex;
  flex-direction: column;
  padding: 60rpx;
  height: 100vh;
}

.page-title {
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 60rpx;
  text-align: center;
}

.register-form {
  width: 100%;
}

.input-group {
  margin-bottom: 30rpx;
}

.input-label {
  font-size: 28rpx;
  color: #333;
  margin-bottom: 10rpx;
}

.input {
  height: 88rpx;
  background-color: #f5f5f5;
  border-radius: 8rpx;
  padding: 0 30rpx;
  font-size: 28rpx;
}

.register-btn {
  height: 88rpx;
  line-height: 88rpx;
  font-size: 32rpx;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.login-link {
  font-size: 28rpx;
  color: #666;
  text-align: center;
  margin-bottom: 30rpx;
}

.link {
  color: #1aad19;
}

.privacy-policy {
  font-size: 24rpx;
  color: #999;
  text-align: center;
}

.policy-link {
  color: #1aad19;
  text-decoration: underline;
}
