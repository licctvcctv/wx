<view class="container register-container">
  <view class="page-title">注册账号</view>
  
  <view class="register-form">
    <view class="input-group">
      <view class="input-label">用户名</view>
      <input class="input" type="text" placeholder="请输入用户名" bindinput="onUsernameInput" value="{{username}}" />
    </view>
    
    <view class="input-group">
      <view class="input-label">密码</view>
      <input class="input" password="true" placeholder="请输入密码" bindinput="onPasswordInput" value="{{password}}" />
    </view>
    
    <view class="input-group">
      <view class="input-label">确认密码</view>
      <input class="input" password="true" placeholder="请确认密码" bindinput="onPassword2Input" value="{{password2}}" />
    </view>
    
    <view class="input-group">
      <view class="input-label">昵称</view>
      <input class="input" type="text" placeholder="请输入昵称" bindinput="onNicknameInput" value="{{nickname}}" />
    </view>
    
    <button class="btn-primary btn-block register-btn" bindtap="doRegister" loading="{{loading}}">
      注册
    </button>
    
    <view class="login-link">
      已有账号？<text class="link" bindtap="goToLogin">返回登录</text>
    </view>
  </view>
</view>
