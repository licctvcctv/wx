/**app.wxss**/
page {
  height: 100%;
  font-size: 28rpx;
  color: #333;
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Helvetica Neue', Helvetica, 'Segoe UI', Arial, sans-serif;
}

.container {
  height: 100%;
  box-sizing: border-box;
  padding: 20rpx;
}

.card {
  background-color: #ffffff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.05);
  margin-bottom: 20rpx;
  padding: 24rpx;
  overflow: hidden;
}

.title {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
}

.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-bottom: 16rpx;
}

.flex-row {
  display: flex;
  flex-direction: row;
}

.flex-column {
  display: flex;
  flex-direction: column;
}

.flex-wrap {
  flex-wrap: wrap;
}

.space-between {
  justify-content: space-between;
}

.align-center {
  align-items: center;
}

.btn-primary {
  background-color: #3A7EE9;
  color: #fff;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 20rpx 40rpx;
  text-align: center;
}

.btn-primary:active {
  background-color: #2a6ad8;
}

.btn-secondary {
  background-color: #f0f0f0;
  color: #333;
  border-radius: 10rpx;
  font-size: 30rpx;
  padding: 20rpx 40rpx;
  text-align: center;
}

.btn-secondary:active {
  background-color: #e0e0e0;
}

.btn-block {
  width: 100%;
  display: block;
}

.tag {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
}

.tag-primary {
  background-color: #e6f1ff;
  color: #3A7EE9;
}

.tag-success {
  background-color: #e7f8ee;
  color: #2ecc71;
}

.tag-warning {
  background-color: #fff7e6;
  color: #f39c12;
}

.tag-danger {
  background-color: #fde7e7;
  color: #e74c3c;
}

.status-text {
  font-size: 26rpx;
}

.status-completed {
  color: #2ecc71;
}

.status-ongoing {
  color: #f39c12;
}

.status-locked {
  color: #95a5a6;
}

.empty-tip {
  text-align: center;
  color: #999;
  font-size: 28rpx;
  padding: 60rpx 0;
}

.divider {
  height: 1px;
  background-color: #eee;
  margin: 20rpx 0;
}
